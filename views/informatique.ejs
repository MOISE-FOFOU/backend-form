    <script>
         function filtrer() {
	var filtre, liste, ligne, cellule, texte ;
	filtre=document.getElementById('search').value.toUpperCase();
	liste=document.getElementById('list');
	ligne=document.getElementsByTagName('td');

	for (let i = 0; i < ligne.length; i++) {
    if(ligne[i].classList.contains("No")){
		cellule=ligne[i];
		if (cellule) {
			texte=cellule.innerText;
			if(texte.toUpperCase().indexOf(filtre)>-1){
				ligne[i].parentElement.style.display="";
			}
			else{
				ligne[i].parentElement.style.display="none";
			}
		}
	}}
}
    </script>
    <script>
    
    // Get the button that opens the modal
    //var mybtn = document.getElementById("myBtn");
    
    // Get the <span> element that closes the modal
    var span = document.getElementsByClassName("close")[0];
    
    // When the user clicks on the button, open the modal
    function mybtn() {
        var modal = document.getElementById("myModal");
      modal.style.display = "block";
    }
    
    // When the user clicks on <span> (x), close the modal
    function sopan() {
        var modal = document.getElementById("myModal");
      modal.style.display = "none";
    }
    
    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function(event) {
        var modal = document.getElementById("myModal");
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
    </script>
    <script>
        function sty(i) {
          // Select the ul element
          var ul = document.querySelector('.nav-list');
          
          // Retrieve all li elements within the ul
          var liElements = ul.getElementsByTagName('li');
          
          // Apply CSS to the first li element
          if (liElements.length > 0) {
            for (let index = 0; index < (liElements.length-1); index++) {
                liElements[index].style.backgroundColor="#11101D";
            }
            liElements[i].style.backgroundColor="white";
          }
        }
      </script>
