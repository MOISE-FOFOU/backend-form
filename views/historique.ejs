<div class="recent-grid">
    <div class="projects">
        <div class="card">
            <div class="card-header">
                <h3>HISTORIQUE</h3>
            </div>
            <div class="card-body">
                <table width="100%">
                    <thead>
                        <tr>
                            <td>DESCRIPTION</td>
                            <td>IMAGE</td>
                            <td>ACTIVATED</td>
                        </tr>
                    </thead>
                    <tbody>
                        <% historiques.forEach(function(historique) { %>
                            <tr>
                                <td><%= historique.Description %></td>
                                <td><img src="<%= historique.Image %>" alt="Image" width="100"></td>
                                <td><%= historique.activated %></td>
                                <td>
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal<%= historique._id %>">
                                        EDIT
                                    </button>
                                </td>
                            </tr>

                            <!-- Modal -->
                            <div class="modal fade" id="editModal<%= historique._id %>" tabindex="-1" role="dialog" aria-labelledby="editModalLabel<%= historique._id %>" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="editModalLabel<%= historique._id %>">Edit Historique</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form method="post" class="update-form" action="/Updatehistorique/<%= historique._id %>">
                                                <input type="hidden" name="_method" value="PUT">
                                                <div class="form-group">
                                                    <label for="update-description">Description</label>
                                                    <input type="text" class="form-control" id="update-description" name="Description" value="<%= historique.Description %>">
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-primary">Update</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="customers">
        <div class="card">
            <div class="card-header">
                <span class="las la-plus-circle"></span>
                <h3>Add New Historique</h3>
            </div>
            <div class="card-body">
                <div class="box">
                    <form method="post" action="/Posthistorique" id="addPresentationForm" enctype="multipart/form-data">
                        <h2>ADD NEW</h2>
                        <div class="inputbox">
                            <input type="text" id="Description" name="Description" placeholder="Description" required>
                            <span>Description</span>
                            <i></i>
                        </div>
                        <div class="inputbox">
                            <input type="file" id="Image" name="Image" required>
                            <span>Image</span>
                            <i></i>
                        </div>
                        <input type="submit" onclick="clickRubrique('/Historique');" value="Enregistrer">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
