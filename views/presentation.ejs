<div class="recent-grid">
    <div class="projects">
        <div class="card mb-4">
            <div class="card-header">
                <h3>PRESENTATION</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-dark table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>DESCRIPTION</th>
                            <th>IMAGE</th>
                            <th>ACTIVATED</th>
                            <th>EDIT</th>
                            <th>ACTIVATE/DEACTIVATE</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% presentations.forEach(function(presentation) { %>
                        <tr>
                            <td><%= presentation.Description %></td>
                            <td><img src="<%= presentation.Image %>" alt="Image" class="img-fluid" style="max-width: 100px;"></td>
                            <td><%= presentation.activated %></td>
                            <td>
                                <button class="btn btn-primary mb-2" onclick="edit('<%= presentation._id %>')">EDIT</button>
                            </td>
                            <td>
                                <button class="btn btn-secondary mb-2" onclick="updateActive('/Activatepresentation/<%= presentation._id %>', '<%= presentation.activated %>', '/Presentation')">Activate/Deactivate</button>
                            </td>
                        </tr>
                        <tr id="editForm<%= presentation._id %>" style="display: none;">
                            <td colspan="5">
                                <form method="post" class="update-form" action="/Updatepresentation/<%= presentation._id %>" style="display: flex; flex-wrap: wrap;">
                                    <input type="hidden" name="_method" value="PUT">
                                    <div class="form-group mb-2 w-100">
                                        <label for="update-description">Description</label>
                                        <input type="text" id="update-description" name="Description" class="form-control" value="<%= presentation.Description %>">
                                    </div>
                                    <div class="form-group mb-2 w-100">
                                        <button type="submit" class="btn btn-success btn-block" onclick="clickRubrique('/Presentation');">Update</button>
                                        <button type="button" class="btn btn-danger btn-block" onclick="edit('<%= presentation._id %>')">Cancel</button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="customers">
        <div class="card">
            <div class="card-header">
                <span class="las la-plus-circle"></span>
                <h3>Add New Presentation</h3>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" action="/Postpresentation" id="addPresentationForm">
                    <div class="form-group mb-2">
                        <label for="Description">Description</label>
                        <input type="text" id="Description" name="Description" class="form-control" placeholder="Description" required>
                    </div>
                    <div class="form-group mb-2">
                        <label for="Image">Image</label>
                        <input type="file" id="Image" name="Image" class="form-control" required>
                    </div>
                    <button type="submit" onclick="clickRubrique('/Presentation');" class="btn btn-primary btn-block">Enregistrer</button>
                </form>
            </div>
        </div>
    </div>
</div>
