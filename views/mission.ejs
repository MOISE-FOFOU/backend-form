<div class="recent-grid container mt-5">
    <div class="row">
        <!-- Main column for displaying missions -->
        <div class="col-lg-8">
            <div class="projects">
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center">
                        <img src="/images/mission.png" alt="Mission Icon" style="width: 70px; height: 70px;">
                        <h3 class="ms-3 mb-0">Missions</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-dark table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>DESCRIPTION</th>
                                    <th>IMAGE</th>
                                    <th>ACTIONS</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% missions.forEach(function(mission) { %>
                                <tr>
                                    <td><%= mission.Description %></td>
                                    <td>
                                        <img src="<%= mission.Image %>" alt="Image" class="img-fluid" style="max-width: 100px;">
                                    </td>
                                    <td>
                                        <div class="form-group mb-2 d-flex justify-content-around">
                                            <button class="btn btn-light mb-2" onclick="edit('<%= mission._id %>')">
                                                <img src="/images/editer.png" alt="Edit" width="40" height="40" style="background-color: white;">
                                            </button>
                                            
                                            <button class="btn btn-secondary mb-2" onclick="updateActive('/Activatemission/<%= mission._id %>', '<%= mission.activated %>', '/Mission')">
                                                <% if (mission.activated) { %>
                                                    <img src="/images/glissiere.png" alt="Deactivate" width="40" height="40">
                                                <% } else { %>
                                                    <img src="/images/eteindre.png" alt="Activate" width="40" height="40">
                                                <% } %>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Hidden edit form for each mission -->
                                <tr id="editForm<%= mission._id %>" style="display: none;">
                                    <td colspan="3">
                                        <form method="post" class="update-form" enctype="multipart/form-data" action="/Updatemission/<%= mission._id %>">
                                            <input type="hidden" name="_method" value="PUT">
                                            <div class="form-group mb-2 w-100">
                                                <label for="update-description">Description</label>
                                                <textarea id="update-description" name="Description" class="form-control"><%= mission.Description %></textarea>
                                            </div>
                                            <div class="form-group mb-2 w-100">
                                                <label for="Image">Image</label>
                                                <input type="file" id="Image" name="Image" class="form-control">
                                            </div>
                                            <div class="form-group mb-2 w-100 d-flex justify-content-between">
                                                <button type="submit" class="btn btn-success btn-block" onclick="clickRubrique('/Mission');">Update</button>
                                                <button type="button" class="btn btn-danger btn-block" onclick="edit('<%= mission._id %>')">Cancel</button>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar column for adding new mission -->
        <div class="col-lg-4">
            <div class="customers">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <img src="/images/form.png" alt="Form Icon" style="width: 50px; height: 50px;">
                        <h3 class="ms-3 mb-0">Add New Mission</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data" action="/Postmission" id="addmissionForm">
                            <div class="form-group mb-2">
                                <label for="Description">Description</label>
                                <input type="text" id="Description" name="Description" class="form-control" placeholder="Description" required>
                            </div>
                            <div class="form-group mb-2">
                                <label for="Image">Image</label>
                                <input type="file" id="Image" name="Image" class="form-control" required>
                            </div>
                            <button type="submit" onclick="clickRubrique('/Mission');" class="btn btn-primary btn-block">Enregistrer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
