    <div class="customers">
        <div class="card">
            <div class="card-header">
                <span class="las la-plus-circle"></span>
                <h3>Add New Teacher</h3>
            </div>
            <div class="card-body">
                <div class="box">
                    <form id="addTeacherForm">
                        <h2>ADD NEW</h2>
                        <div class="inputbox">
                            <input type="text" id="nom" name="nom" placeholder="Nom" required>
                            <span>Nom</span>
                            <i></i>
                        </div>
                        <div class="inputbox">
                            <input type="text" id="type" name="type" placeholder="Type" required>
                            <span>Type</span>
                            <i></i>
                        </div>
                        <div class="inputbox">
                            <input type="text" id="credits" name="credits" placeholder="Nmbre_Credits" required>
                            <span>Nmbre_Credits</span>
                            <i></i>
                        </div>
                        <div class="inputbox">
                            <input type="text" id="description" name="description" placeholder="Description" required>
