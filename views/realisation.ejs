                            <i></i>
                        </div>
                        <div class="inputbox">
                            <select name="langue" id="langue">
                                <option value="1">Francais</option>
                                <option value="2">Anglais</option>
                            </select>
                            <i></i>
                        </div>
                        <div id="daccord">
                            <input type="checkbox" id="check" name="agree" required>
                            <label for="check" style="color: pink;">Je suis d'accord</label>
                        </div>
                        <input type="submit" value="Enregistrer">
                    </form>
                </div>
            </div>
