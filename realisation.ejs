<header>
    <h2>Realisation</h2>
    <div class="search-wrapper">
        <span class="fas fa-search"></span>
        <input type="search" placeholder="search" onkeyup="filtrer()" id="search"/>
    </div>
  </header>
  <main>
    <i class="fas fa-plus plus" id="myBtn" onclick="mybtn()"></i>
    <!-- The Modal -->
    <div id="myModal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close" onclick="sopan()">&times;</span>
            <form method="post" action="/Postrealisation" enctype="multipart/form-data" id="addrealisationForm">
                <div class="form-group mb-2">
                    <label for="titre">Titre</label>
                    <input type="text" id="titre" name="titre" class="form-control" placeholder="titre" required>
                </div>
                <div class="form-group mb-2">
                    <label for="annee">Annee</label>
                    <input type="text" id="annee" name="annee" class="form-control" placeholder="annee" required>
                </div>
                <div class="form-group mb-2">
                    <label for="Description">Description</label>
                    <input type="text" id="Description" name="Description" class="form-control" placeholder="description" required>
                </div>
                <button type="submit" onclick="clickRubrique('/Realisation');" class="btn btn-primary btn-block">Enregistrer</button>
            </form>
        </div>
    </div>

      <div class="list">
          <h2>Liste de realisation</h2>
          <hr>
          <table id="list">
              <thead>
                  <tr>
                    <th>TITRE</th>
                            <th>ANNEE</th>
                            <th>DESCRIPTION</th>
                            <th>ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% realisations.forEach(function(realisation) { %>
                        <tr>
                            <td class="No"><%= realisation.titre %></td>
                            <td><%= realisation.annee %></td>
                            <td><%= realisation.Description %></td>
                            <td>
                                        <div class="yoyo">
                                    <button class="btn  mb-2" onclick="edit('<%= realisation._id %>')">
                                        <i class="fas fa-pen"></i>
                                    </button>
                                    
                                    <% if (realisation.activated === true) { %>
                                        <button class=" btn-secondary mb-2" onclick="updateActive('/Activaterealisation/<%= realisation._id %>', '<%= realisation.activated %>', '/Realisation')">
                                            <i class="fas fa-toggle-on"></i>
                                        </button>
                                    <% } else { %>
                                        <button class=" btn-secondary mb-2" onclick="updateActive('/Activaterealisation/<%= realisation._id %>', '<%= realisation.activated %>', '/Realisation')">
                                            <i class="fas fa-toggle-off"></i>
                                        </button>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                        <tr id="editForm<%= realisation._id %>" style="display: none;">
                            <td colspan="6">
                                <form method="post" class="update-form" enctype="multipart/form-data" action="/Updaterealisation/<%= realisation._id %>" style="display: flex; flex-wrap: wrap;">
                                    <input type="hidden" name="_method" value="PUT">
                                    <div class="form-group mb-2 w-100">
                                        <label for="update-titre">Titre</label>
                                        <input type="text" id="update-titre" name="titre" class="form-control" value="<%= realisation.titre %>">
                                    </div>
                                    <div class="form-group mb-2 w-100">
                                        <label for="update-annee">Annee</label>
                                        <input type="text" id="update-annee" name="annee" class="form-control" value="<%= realisation.annee %>">
                                    </div>
                                    <div class="form-group mb-2 w-100">
                                        <label for="update-description">Description</label>
                                        <input type="text" id="update-description" name="Description" class="form-control" value="<%= realisation.Description %>">
                                    </div>
                                    <div class="form-group mb-2 w-100">
                                        <button type="submit" class="btn btn-success btn-block" onclick="clickRubrique('/Realisation');">Update</button>
                                        <button type="button" class="btn btn-danger btn-block" onclick="edit('<%= realisation._id %>')">Cancel</button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
              </tbody>
          </table>
      </div>
  </main>